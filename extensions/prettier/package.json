{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "prettier",
  "title": "Prettier Markdown",
  "description": "Format code with Prettier",
  "icon": "prettier-logo.png",
  "author": "lin",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Format Code",
      "subtitle": "Apply Prettier and Markdown",
      "description": "Apply Prettier to Clipboard content",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.46.1"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/prettier": "^2.7.2",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.8.3",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
